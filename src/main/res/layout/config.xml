<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/status_bar_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/status_bar_info">
    </android.support.v7.widget.AppCompatCheckBox>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/is_blinking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/is_blinking">
    </android.support.v7.widget.AppCompatCheckBox>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/is_graphic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/is_graphic">
    </android.support.v7.widget.AppCompatCheckBox>


    <ImageView
        android:id="@+id/termo_graphic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:onClick="onGraphicClick" />
</LinearLayout>