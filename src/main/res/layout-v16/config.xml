<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/calibrate_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/calibrate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="200dp"
                android:padding="10dp"
                android:text="@string/calibrate_tv" />

            <Spinner
                android:id="@+id/calibrate_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Spinner>

        </LinearLayout>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/status_bar_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/status_bar_info">
        </android.support.v7.widget.AppCompatCheckBox>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/is_blinking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/is_blinking">
        </android.support.v7.widget.AppCompatCheckBox>

        <LinearLayout
            android:id="@+id/update_time_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/update_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:minWidth="200dp"
                android:text="@string/update_time_tv" />

            <Spinner
                android:id="@+id/update_time_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Spinner>

        </LinearLayout>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/is_graphic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/is_graphic">
        </android.support.v7.widget.AppCompatCheckBox>


        <ImageView
            android:id="@+id/termo_graphic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:onClick="onGraphicClick" />
    </LinearLayout>

</ScrollView>